<div class="body_index">
  <div class="container">
    <div class="header">
      <h1>Cocktails</h1>
    </div>

    <div class="row">
      <% @cocktails.each do |t| %>
        <div class="col-md-4">
          <div class="cocktail-card">
            <div class="cocktail-icon">
              <i class="fas fa-cocktail"></i>
            </div>
            <%= link_to t.name, cocktail_path(t) %> <%= link_to '❌', cocktail_path(t), method: :delete,
              data: { confirm: "Are you sure?" } %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="footer">
  <div class='btn btn-secondary'>
    <%= link_to "New Cocktail", new_cocktail_path  %>
  </div>
</div>
